<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:name="com.lucas.soccerchallenge.features.home.HomeFragment"
        android:id="@+id/homeFragment"
        android:label="@string/matches"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_matchDetailFragment"
            app:destination="@id/matchDetailFragment" />
    </fragment>
    <fragment
        android:name="com.lucas.soccerchallenge.features.match.MatchDetailFragment"
        android:id="@+id/matchDetailFragment"
        android:label="@string/match_detail"
        tools:layout="@layout/fragment_match_detail">
        <argument
            android:name="matchFixture"
            app:argType="com.lucas.soccerchallenge.features.fixture.adapter.FixtureDisplayModel"
            app:nullable="true"
            android:defaultValue="@null" />
        <argument
            android:name="matchResult"
            app:argType="com.lucas.soccerchallenge.features.results.adapter.ResultDisplayModel"
            app:nullable="true"
            android:defaultValue="@null" />
    </fragment>

</navigation>